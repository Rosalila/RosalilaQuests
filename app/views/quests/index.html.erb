<h1>Listing quests</h1>

<table>
  <tr>
    <th>Speciality</th>
    <th>Name</th>
    <th>Level</th>
    <th>Experience</th>
    <th>Kelo experience</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quests.each do |quest| %>
  <tr>
    <td><img src="<%= Specialty.find_by_id(quest.speciality_id).picture %>"/></td>
    <td><%= link_to quest.name, quest %></td>
    <td><%= quest.level %></td>
    <td><%= quest.experience %></td>
    <td><%= quest.kelo_experience %></td>
    <td><%= link_to 'Show', quest %></td>
    <td><%= link_to 'Edit', edit_quest_path(quest) %></td>
    <td><%= link_to 'Destroy', quest, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Quest', new_quest_path %>
